{
    "version": 2,
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/backend/server.js" },
      { "source": "*", "destination": "/frontend/index.html" }
    ],
    "builds": [
      {
        "src": "backend/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "frontend/dist"
        }
      }
    ]
  }
  